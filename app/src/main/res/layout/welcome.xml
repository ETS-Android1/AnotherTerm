<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/text_padding"
    tools:context=".SessionsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title_tips"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <green_green_avk.anotherterm.ui.HtmlTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:xmlText="@string/welcome_label_start" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/uiOptionSize"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_grid_btn"
            android:contentDescription="@string/action_add_fav"
            android:focusable="true"
            android:onClick="onNewFav"
            app:srcCompat="@drawable/ic_menu_add" />

    </LinearLayout>

    <green_green_avk.anotherterm.ui.HtmlTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xmlText="@string/welcome_desc" />

</LinearLayout>
