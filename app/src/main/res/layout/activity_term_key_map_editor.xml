<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".TermKeyMapEditorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/text_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_save_as_" />

        <EditText
            android:id="@+id/f_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:paddingBottom="@dimen/text_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_separator"
            android:text="@string/label_key_" />

        <Spinner
            android:id="@+id/f_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/AppSettingsTableHeaderTextStyle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Shift" />

            <TextView
                style="@style/AppSettingsTableHeaderTextStyle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Alt" />

            <TextView
                style="@style/AppSettingsTableHeaderTextStyle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ctrl" />
        </LinearLayout>

        <TextView
            style="@style/AppSettingsTableHeaderTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_keymode_normal" />

        <TextView
            style="@style/AppSettingsTableHeaderTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_keymode_application" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:requiresFadingEdge="vertical">

        <LinearLayout
            android:id="@+id/keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/b_info"
            style="@style/AppWidget.EditorToolbar.ImageButton.Horizontal"
            android:onClick="info"
            app:srcCompat="@drawable/ic_help" />

        <ImageButton
            android:id="@+id/b_share"
            style="@style/AppWidget.EditorToolbar.ImageButton.Horizontal"
            android:onClick="share"
            app:srcCompat="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/b_copy"
            style="@style/AppWidget.EditorToolbar.ImageButton.Horizontal"
            android:onClick="copy"
            app:srcCompat="@drawable/ic_copy_48" />

        <ImageButton
            android:id="@+id/b_paste"
            style="@style/AppWidget.EditorToolbar.ImageButton.Horizontal"
            android:onClick="paste"
            app:srcCompat="@drawable/ic_paste_48" />

        <ImageButton
            android:id="@+id/b_save"
            style="@style/AppWidget.EditorToolbar.ImageButton.Horizontal"
            android:onClick="save"
            app:srcCompat="@drawable/ic_save" />
    </LinearLayout>

</LinearLayout>
