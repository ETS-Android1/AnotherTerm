<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/keycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_separator"
        android:paddingRight="@dimen/text_separator"
        android:textColor="?android:attr/editTextColor"
        tools:text="KEYCODE" />

    <TextView
        android:id="@+id/devId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_separator"
        android:paddingRight="@dimen/text_separator"
        android:textColor="?android:attr/editTextColor"
        tools:text="BUILT-IN" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_assoc"
        app:tint="?android:attr/textColorTertiary"
        tools:ignore="ContentDescription" />

    <Spinner
        android:id="@+id/toKeycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grid_btn"
        android:contentDescription="@string/action_delete"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</LinearLayout>
